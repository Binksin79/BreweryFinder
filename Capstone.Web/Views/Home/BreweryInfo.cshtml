@model Capstone.Web.Models.BreweryModel

@{

}

<div class="container">

    <div id="breweryInfo">

        <img id="breweryProfileImg" src='@Model.BreweryProfileImg'>

        <div class="brewInfoTxt">
            <h1>@Model.BreweryName</h1>

            <h2>Founded in: @Model.YearFounded</h2>

            <p>@Model.History</p>
            <table>
                <tr>
                    <td class="brewTable">@Model.HoursOfOperation</td>
                    <td class="brewTable">@Model.Email</td>
                    <td class="brewTable">@Model.Phone</td>
                </tr>
            </table>
        </div>
    </div>

</div>

